<%- include("partials/header.ejs") %>
  <div class="content-form">
    <div class="content-subtitles">
      <h1 style="font-weight: 800;">Share your first post ...</h1>  
      <h3><i class="fa-solid fa-arrow-down"></i></h3>
    </div>
    <form action="/submit" method="POST" class="input-post-content">  
      <div class="content-title">
        <input type="text" placeholder="Title" name="title-post" style="padding-left: 8px; border-radius: 8px;">
      </div>
      <textarea name="post-text" class="input-post" placeholder="Write a creative post..."></textarea>
      <button class="button-submit">Post</button> 
    </form>
  </div>
  <div class="text-recent">
    <div class="line-recent"></div>
    <h6 style="color: #00000094;">Recent Posts</h6>
    <div class="line-recent"></div>
  </div>
  <div class="posts-content">
    <% items.forEach(item => { %>    
      <div class="container-content" id="item-<%=item.id%>" onclick="pageDetails('<%= item.id %>')">
        <div class="blog-content">
          <img src="<%=item.url_image%>" style="width: 100%; height: 130px; border-radius: 10px 10px 3px 3px;">
          <p style="margin: 10px 7px 0; font-size: 14px; color: #3f4444eb;"><%= (item.posting_date).toDateString()%></p>
          <h5 class="title-post"><%=item.title %></h5>
          <p class="text-post"><%= item.txt_content %></p>
        </div>
        <div class="button-content">
          <!--<form action="/delete/<%= item.id %>" method="POST"><-->
          <button onclick="deletePost(`<%= item.id %>`)" class="button-change" style="top: 5px;"><i class="fa-solid fa-trash"></i></button>
          <!--</form>-->
          <form action="/edit/<%= item.id %>" method="POST">
            <button class="button-change" style="top:38px;"><i class="fa-solid fa-pen"></i></button>
          </form> 
        </div>
      </div>    
    <% }); %>
  </div>
  
<%- include("partials/footer.ejs") %>